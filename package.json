{
    "name": "particles",
    "version": "0.16.0",
    "private": true,
    "description": "Fields and particles simulation",
    "type": "module",
    "scripts": {
        "build": "tsc -b && vite build",
        "lint-src": "eslint .",
        "lint-style": "npx stylelint src/**/*.*css",
        "lint-ts": "npx tsc -b ./ --noEmit",
        "lint": "npm-run-all lint-src lint-ts lint-style",
        "prestart": "npm install",
        "start": "vite",
        "preview": "vite preview",
        "all": "npm-run-all lint build",
        "deploy": "node ./scripts/deploy.js",
        "commit-version": "node ./scripts/commit-version.js",
        "release": "node ./scripts/release.js"
    },
    "dependencies": {
        "@jezvejs/number": "^1.1.0",
        "@jezvejs/react": "^1.11.4",
        "@jezvejs/types": "^1.1.0",
        "@vitejs/plugin-react": "^4.3.4",
        "classnames": "^2.5.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "vite": "^6.2.3",
        "vite-plugin-svgr": "^4.3.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/feesler/particles.git"
    },
    "keywords": [
        "simulation",
        "canvas",
        "particle",
        "physics"
    ],
    "author": "Ilya Makarov",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/feesler/particles/issues"
    },
    "homepage": "https://github.com/feesler/particles#readme",
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@jezvejs/release-tools": "^1.0.2",
        "@tsconfig/vite-react": "^3.4.0",
        "@types/node": "^22.13.14",
        "@types/react": "^18.3.20",
        "@types/react-dom": "^18.3.5",
        "dotenv": "^16.4.7",
        "eslint": "^9.23.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "npm-run-all": "^4.1.5",
        "sass-embedded": "^1.86.0",
        "stylelint": "^16.17.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard-scss": "^14.0.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0"
    }
}
